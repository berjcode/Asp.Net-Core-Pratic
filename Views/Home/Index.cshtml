    ViewData["Title"] = "Home Page";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<div class="text-center">
    <h1 class="display-4">Hoşgeldiniz</h1>
  
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100"   height="250" weight="250" src="~/Images/foto1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" height="250" weight="250" src="~/Images/foto2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" height="250" weight="250" src="~/Images/foto3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Geri</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">İleri</span>
    </a>
</div>
